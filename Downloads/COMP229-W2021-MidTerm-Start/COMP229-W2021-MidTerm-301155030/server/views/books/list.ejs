<%- include ../partials/header.ejs %>



    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-1 col-md-10">
          <!-- ------------------------ -->
          <!-- FIX THE ADD BUTTON BELOW -->
          <!-- ------------------------ -->
          <h1><%= title %></h1>
          <a href="/books/add" class="btn btn-primary" role="button">
          <i class="fa fa-plus"></i> Add a Book</a>
          <br>
          <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
              <thead>
                <tr class="d-flex">
                  <th class="text-center col-2">Name</th>
                  <th class="text-center col-2">Author</th>
                  <th class="text-center col-1">Published</th>
                  <th class="col-4">Description</th>
                  <th class="text-center col-1">Price</th>
                   <th class="text-center col-1"></th>
                   <th class="text-center col-1"></th>
                  <th class="text-center col-1"></th>
   
                </tr>
                </thead>
                <tbody>
                <!-- Template Row -->
                <% for (let count = 0; count < books.length; count++) { %>
                <tr class="d-flex">
                  <td class="text-center col-2"><%= books[count].name %></td>
                  <td class="text-center col-2"><%= books[count].author %></td>
                  <td class="text-center col-1"><%= books[count].published %></td>
                  <td class="col-1"><%= books[count].description %></td>
                  <td class="text-center col-1"><%= books[count].price %></td>
                  
                

                  <td class="text-center col-1">
                  <a href="/books/edit/<%= books[count]._id %>" role ="button" class ="btn btn-primary btn-sm">
                  <i class="fas fa-pen-alt"></i> EDIT</a>
                  </td>

                  <td class="text-center col-1">
                  <a href="/books/delete/<%= books[count]._id %>" class ="btn btn-danger btn-sm">
                  <i class="fa fa-trash-alt"></i> DELETE</a>
                  </td>
                </tr>
                <% } %>
            </table>
          </div>
           <div class="col-md-offset-1 col-md-10 text-center">
            <ul class="pagination pagination-lg pager" id="myPager"></ul>
          </div>
        </div>
      </div>
    </div>


<%- include ../partials/footer.ejs %>


